<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smartface.org.smartface_polygons" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".polygons"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GenerateProblem"
            android:label="@string/title_activity_generate_problem"
            android:parentActivityName=".polygons" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="smartface.org.smartface_polygons.polygons" />
        </activity>
    </application>

</manifest>
